{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "target": "es2020",
    "rootDir": "./src",
    "baseUrl": "./src",
    "composite": true,
    "strict": true,
    "esModuleInterop": true,
    "paths": {
      "shared/*": [
        "../../shared/dist/*"
      ]
    },
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "references": [
    {
      "path": "../shared"
    }
  ],
  "include": [
    "src"
  ],
}