{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext", // Ensures ES module syntax
    "moduleResolution": "Node", 
    "strict": true,
    "outDir": "./dist", // Outputs transpiled code to a directory
    "rootDir": "./src",
    "esModuleInterop": true, // Ensures compatibility with CommonJS modules
    "lib": ["ES2020", "DOM"],
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@test/*": ["test/*"]
    },
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}