{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext", // Ensures ES module syntax
    "moduleResolution": "Node", 
    "strict": true,
    "outDir": "./dist", 
    "rootDir": "./src",
    "esModuleInterop": true, // Ensures compatibility with CommonJS modules
    "lib": ["ES2020", "DOM"],
    "sourceMap": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["src/*"],
      "@test/*": ["src/test/*"],
      "shared/*": ["../../shared/src/*"]
    },
    "skipLibCheck": true,
  },
  "references": [
    { "path": "../shared" }
  ],
  "include": ["src"],
  "exclude": ["node_modules"]
}